root                     = true

[*]
end_of_line              = lf
insert_final_newline     = false
trim_trailing_whitespace = true
charset                  = utf-8

[*.lua]
indent_style             = space
indent_size              = 2

[*.t]
indent_style             = space
indent_size              = 4

[Makefile]
indent_style             = tab
